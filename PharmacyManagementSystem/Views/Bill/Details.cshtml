@model Bill
@{
    ViewData["Title"] = "Bill Details";
}
<div class="container mt-4">
    <h2>Bill #@Model.BillId</h2>
    <div class="row">
        <div class="col-md-6">
            <p><strong>Customer:</strong> @Model.Customer?.CusName</p>
            <p><strong>Employee:</strong> @Model.Employee?.Name</p>
            <p><strong>Date:</strong> @Model.BillDate.ToString("dd-MM-yyyy")</p>
        </div>
    </div>
    <h4>Items</h4>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Medicine</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.BillItems)
            {
                <tr>
                    <td>@item.Medicine?.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.Total</td>
                </tr>
            }
        </tbody>
    </table>
    <h3>Total Amount: @Model.TotalAmount</h3>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Back</a>
</div>
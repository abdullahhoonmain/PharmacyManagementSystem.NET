@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Employees";
}
<div class="container mt-4">
    <h2>Employees</h2>
    <a href="@Url.Action("Create")" class="btn btn-success mb-3">Add Employee</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Role</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeId</td>
                    <td>@employee.Name</td>
                    <td>@employee.Role</td>
                    <td>@employee.Phone</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = employee.EmployeeId })" class="btn btn-sm btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", new { id = employee.EmployeeId })" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

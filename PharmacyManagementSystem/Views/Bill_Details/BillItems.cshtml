@model IEnumerable<BillDetails>
@{
    ViewData["Title"] = "Bill Items";
}
<div class="container mt-4">
    <h2>Bill #@ViewBag.BillId Items</h2>
    <a href="@Url.Action("Create", new { billId = ViewBag.BillId })" class="btn btn-success mb-3">Add Item</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Medicine</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Medicine?.Name</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.Total</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.BillItemId })" class="btn btn-sm btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", new { id = item.BillItemId })" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
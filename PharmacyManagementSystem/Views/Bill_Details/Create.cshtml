@model BillDetails
@{
    ViewData["Title"] = "Add Item";
}
<div class="container mt-4">
    <h2>Add Item to Bill #@ViewBag.BillId</h2>
    <form method="post">
        <input type="hidden" name="BillId" value="@ViewBag.BillId" />
        <div class="form-group mb-3">
            <label>Medicine</label>
            <select name="MedId" class="form-control" required>
                <option value="">Select Medicine</option>
                @foreach (var medicine in (IEnumerable<Medicine>)ViewBag.Medicines)
                {
                    <option value="@medicine.MedicineId">@medicine.Name - (Stock: @medicine.Quantity)</option>
                }
            </select>
        </div>
        <div class="form-group mb-3">
            <label>Quantity</label>
            <input type="number" name="Quantity" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-success">Add</button>
        <a href="@Url.Action("BillItems", new { billId = ViewBag.BillId })" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@model IEnumerable<Supplier>
@{
    ViewData["Title"] = "Suppliers";
}
<div class="container mt-4">
    <h2>Suppliers</h2>
    <a href="@Url.Action("Create")" class="btn btn-success mb-3">Add Supplier</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Contact Person</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var supplier in Model)
            {
                <tr>
                    <td>@supplier.SupplierId</td>
                    <td>@supplier.SupplierName</td>
                    <td>@supplier.ContactPerson</td>
                    <td>@supplier.Phone</td>
                    <td>@supplier.Address</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = supplier.SupplierId })" class="btn btn-sm btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", new { id = supplier.SupplierId })" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
